<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hazacs.smdtabs.SignUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/reg_name_et"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reg_password_et"
        android:layout_below="@+id/reg_name_et"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reg_name_et"
        android:hint="Enter Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/reg_email_et"
        android:layout_below="@+id/reg_password_et"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reg_password_et"
        android:hint="Enter Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/reg_contactno_et"
        android:layout_below="@+id/reg_email_et"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reg_email_et"
        android:hint="Enter Contact No" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg_cnic_et"
        android:layout_below="@+id/reg_contactno_et"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reg_contactno_et"
        android:hint="Enter CNIC" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/reg_address_et"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reg_cnic_et"
        android:hint="Enter Address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/submit_reg_user_btn"
        android:layout_below="@+id/reg_address_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="submit_reg_user_btnClick" />

</RelativeLayout>
